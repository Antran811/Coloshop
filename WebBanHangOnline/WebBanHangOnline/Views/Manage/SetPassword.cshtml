@model WebBanHangOnline.Models.SetPasswordViewModel
@{
    ViewBag.Title = "Create Password";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<h2>@ViewBag.Title.</h2>
<div><h1>Change</h1></div>
<< CoLoShop >>
<p class="text-info">

    Bạn không có tên người dùng/mật khẩu cục bộ cho trang web này. Thêm tài khoản cục bộ để bạn có thể đăng nhập mà không cần đăng nhập bên ngoài.
</p>

@using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

<h4>Tạo đăng nhập cục bộ</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Cài đặt mật khẩu" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}